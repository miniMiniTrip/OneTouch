<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onetouch.dao.MemDao">

	<!-- 회원정보 아이디로 1개 정보 조회해오기 -->
	<select id="selectMemIdOne" resultType="MemVo" parameterType="String">
		select * from otdb.mem where mem_id=#{mem_id}
	</select> 
	
	<!-- 회원정보 이메일로 1개 정보 조회해오기 -->
	<select id="selectMemEmailOne" resultType="MemVo" parameterType="String">
		select * from otdb.mem where mem_email=#{mem_email}
	</select>
	<!-- 회원정보 mem_idx로 1개 정보 조회해오기 -->
	<select id="selectMemIdxOne" resultType="MemVo" parameterType="int">
		select * from otdb.mem where mem_idx=#{mem_idx}
	</select>
	
	<!-- 회원가입등록 -->
	<insert id="insert" parameterType="MemVo">
		insert into mem values( null
								,#{mem_id}
								,#{mem_pw}
								,#{mem_name}
								,#{mem_postal}
								,#{mem_addr}
								,#{mem_addr_more}
								,#{mem_email}
								,'user'
								,#{mem_birth}
								,#{mem_phone}
								,now()
								,now()
								,#{mem_image_url}
		)
	</insert>
	
	<!-- 유저정보 업데이트 -->
	<update id="updateMem" parameterType="MemVo">
		UPDATE mem 
			SET
				mem_pw=#{mem_pw}
				,mem_name=#{mem_name}
				,mem_postal=#{mem_postal}
				,mem_addr=#{mem_addr}
				,mem_addr_more=#{mem_addr_more}
				,mem_email=#{mem_email}
				,mem_roll=#{mem_roll}
				,mem_birth=#{mem_birth}
				,mem_phone=#{mem_phone}
				,mem_update_time=now()
			WHERE mem_idx=#{mem_idx}
	</update>
	
	
	<!-- 이름과 이메일로 아이디 찾기를 위한 유저 조회 -->
	<select id="findUserId" parameterType="map" resultType="String">
		SELECT mem_id FROM mem WHERE mem_name = #{mem_name} and mem_email = #{mem_email}
	</select>
	
	<!-- 비밀번호 찾기: 아이디 + 이메일로 유저 찾기 -->
	<select id="findUserForPwReset" parameterType="map" resultType="MemVo">
	    SELECT * FROM mem
	    WHERE mem_id = #{mem_id} AND mem_email = #{mem_email}
	</select>
	

	
</mapper>