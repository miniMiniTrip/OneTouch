<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onetouch.dao.ProductDao">

  <!-- 카테고리별 조회 -->
  <select id="selectList" parameterType="int" resultType="product">
     select * from product
     <if test="category_idx!=0">
        where category_idx=#{ category_idx }
     </if>
  </select>
  
  <!-- 1건 조회 -->
  <select id="selectOne" parameterType="int" resultType="product">
     select * from product where product_idx=#{ product_idx }
  </select>
  
  <!-- 상품추가 -->
  <insert id="insert"  parameterType="product">
     insert into product values(null,
                                #{ product_idx },
                                #{ category_idx },
                                #{ product_wishlist },
                                #{ product_price },
                                #{ product_name },
                                #{ product_brand },
                                #{ product_comment },
                                #{ product_cnt }, 
                                now(),
                               	now(),
                                )
  </insert>
 

</mapper>












